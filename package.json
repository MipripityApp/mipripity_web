{
  "name": "mipripity-web",
  "version": "1.0.0",
  "description": "Mipripity Web Application - Property voting and management platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "mkdir -p build && echo '<!DOCTYPE html><html><head><title>Mipripity Web</title></head><body><div id=\"root\"><h1>Mipripity Web API Server</h1><p>The API server is running. Frontend will be implemented later.</p></div></body></html>' > build/index.html",
    "postinstall": "npm run build",
    "deploy": "npm run build && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MipripityApp/mipripity_web.git"
  },
  "keywords": [
    "property",
    "voting",
    "real-estate",
    "express",
    "react"
  ],
  "author": "Mipripity Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MipripityApp/mipripity_web/issues"
  },
  "homepage": "https://github.com/MipripityApp/mipripity_web#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "helmet": "^6.0.1",
    "pg": "^8.9.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}